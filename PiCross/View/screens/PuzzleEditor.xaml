<UserControl x:Class="View.screens.PuzzleEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>
        <ImageBrush ImageSource="/PinkBlossom.jpg" />
    </UserControl.Background>
    <Grid Width="300" Height="450">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Width="Auto" Padding="5" Command="{Binding GoToMainMenu}">
                <TextBlock>
                    Back to main menu
                </TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>